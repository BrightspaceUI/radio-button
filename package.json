{
  "name": "d2l-radio-button",
  "description": "Polymer-based web component for D2L radio buttons",
  "private": true,
  "scripts": {
    "postinstall": "polymer install",
    "lint:html": "eslint *.html demo/*.html test/*.html",
    "lint:wc": "polymer lint -i *.html",
    "lint": "npm run lint:html && npm run lint:wc",
    "test": "npm run lint && npm run test:polymer:local",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUI/radio-button.git"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "^4.2.0",
    "eslint-config-brightspace": "^0.3.1",
    "eslint-plugin-html": "^3.1.0",
    "polymer-cli": "^1.7.7"
  }
}
